<!--Sales-->
<h4 id="salesTitle" class="hidden">Sales Report</h4>
<div class="px-3">
  <div class="row rounded-2 shadow-sm mb-3 bg-white">
    <div class="col-md-4 py-2 border-end px-3">
      <div class="d-flex justify-content-between">
        <div>
          <span class="fw-semibold"> Total sales: </span>
          <p class="d-block fw-normal opacity-75">Your total sales</p>
        </div>

        <h2 class="mt-1 fw-bold text-info">
          ₱ <span id="totalAmount">0</span>
        </h2>
      </div>
      <hr class="border-info border-4" />
    </div>

    <div class="col-md-4 py-2 border-end px-3">
      <div class="d-flex justify-content-between">
        <div>
          <span class="fw-semibold"
            ><span id="sellerNameCard">Seller</span> share</span
          >
          <p class="d-block fw-normal opacity-75">Your seller's share</p>
        </div>
        <h2 class="mt-1 fw-bold opacity-75" id="sellerSales">₱ 0</h2>
      </div>
      <hr class="border-dark-subtle border-4" />
    </div>

    <div class="col-md-4 py-2 border-end">
      <div class="d-flex justify-content-between">
        <div>
          <span class="fw-semibold">Mugiwara share</span>
          <p class="d-block fw-normal opacity-75">Your share</p>
        </div>
        <h2 class="mt-1 fw-bold" id="mgwSales">₱ 0</h2>
      </div>
      <hr class="border-danger-subtle border-4" />
    </div>
  </div>

  <!--Per rates sales -->
  <div class="row rounded-2 shadow-sm mb-3 bg-white">
    <div class="col-md-3 py-2 border-end">
      <div class="d-flex justify-content-between">
        <div>
          <span class="fw-semibold"> 3HRS </span>
          <p class="d-block fw-normal opacity-75">Profile 3HRS sales</p>
        </div>
        <h2 class="mt-1 fw-bold text-primary opacity-75">
          ₱ <span id="profile3HrsSales">0</span>
        </h2>
      </div>
      <hr class="border-primary opacity-75 border-4" />
    </div>

    <div class="col-md-3 py-2 border-end">
      <div class="d-flex justify-content-between">
        <div>
          <span class="fw-semibold"> 1DAY </span>
          <p class="d-block fw-normal opacity-75">Profile 1day sales</p>
        </div>
        <h2 class="mt-1 fw-bold text-danger opacity-75">
          ₱ <span id="profile1DaySales">0</span>
        </h2>
      </div>
      <hr class="border-danger opacity-75 border-4" />
    </div>

    <div class="col-md-3 py-2 border-end">
      <div class="d-flex justify-content-between">
        <div>
          <span class="fw-semibold"> 1WEEK </span>
          <p class="d-block fw-normal opacity-75">Profile 1week sales</p>
        </div>
        <h2 class="mt-1 fw-bold text-warning opacity-75">
          ₱ <span id="profile1WeekSales">0</span>
        </h2>
      </div>
      <hr class="border-warning opacity-75 border-4" />
    </div>

    <div class="col-md-3 py-2 border-end">
      <div class="d-flex justify-content-between">
        <div>
          <span class="fw-semibold"> 1MONTH </span>
          <p class="d-block fw-normal opacity-75">Profile 1month sales</p>
        </div>
        <h2 class="mt-1 fw-bold text-success opacity-75">
          ₱ <span id="profile1MonthSales">0</span>
        </h2>
      </div>
      <hr class="border-success opacity-75 border-4" />
    </div>
  </div>

  <!-- Filter dropdown -->
  <div class="mt-5 row">
    <div class="col-md-3 mb-1">
      <div class="d-flex align-items-center">
        <label for="dateFrom" class="mx-1">From:</label>
        <input
          type="date"
          id="dateFrom"
          name="dateFrom"
          class="form-control form-control-sm shadow-sm"
        />
      </div>
    </div>
    <div class="col-md-3 mb-1">
      <div class="d-flex align-items-center">
        <label for="dateTo" class="mx-1">To:</label>
        <input
          type="date"
          id="dateTo"
          name="dateTo"
          class="form-control form-control-sm shadow-sm"
        />
      </div>
    </div>
    <div class="col-md-4 mb-1 d-flex">
      <div class="me-2">
        <button
          disabled
          type="button"
          id="viewBtn"
          class="btn btn-secondary btn-sm"
        >
          &#128196; View Report
        </button>
      </div>
      <div class="me-2">
        <button
          disabled
          type="button"
          id="csvBtn"
          class="px-3 btn btn-success btn-sm"
        >
          &darr; CSV
        </button>
      </div>
      <div class="me-2">
        <select id="database" class="form-select form-select-sm shadow-sm">
          <option value="" disabled>Select source</option>
          <option value="mikrotik" selected>Mikrotik</option>
          <option value="backup">Backup</option>
        </select>
      </div>
    </div>
  </div>
  <div class="row mt-1">
    <div class="col-md-3 mb-1">
      <div class="form-group">
        <input
          id="search"
          onkeypress="handleSearch(event)"
          name="search"
          class="form-control form-control-sm shadow-sm"
          placeholder="Search"
        />
      </div>
    </div>
    <div class="col-md-2 mb-1">
      <div>
        <select
          onchange="handleSelectFilter()"
          id="profile"
          name="profile"
          class="form-control form-control-sm shadow-sm"
        >
          <option value="">Select profile</option>
          <option value="3hrs">3HRS</option>
          <option value="1day">1DAY</option>
          <option value="1week">1WEEK</option>
          <option value="1month">1MONTH</option>
        </select>
      </div>
    </div>
    <div class="col-md-2 mb-1">
      <div>
        <select
          onchange="handleSelectFilter()"
          id="seller"
          name="seller"
          class="form-control form-control-sm shadow-sm"
        >
          <option value="">Select seller</option>
          <option value="Sam">Sam</option>
          <option value="May2x">May2x</option>
          <option value="Elay">Elay</option>
          <option value="Kulot">Kulot</option>
          <option value="Xerxes">Xerxes</option>
          <option value="Angelyn">Angelyn</option>
          <option value="Jomar">Jomar</option>
          <option value="Bobot">Bobot</option>
        </select>
      </div>
    </div>
    <div class="col-md-2 mb-1">
      <div>
        <select
          onchange="handleSelectPercent()"
          id="sharePercent"
          name="sharePercent"
          class="form-control form-control-sm shadow-sm"
        >
          <option value="">Select seller percent</option>
          <option value="0.20">20</option>
          <option value="0.25">25</option>
          <option value="0.30" selected>30</option>
          <option value="0.35">35</option>
          <option value="0.40">40</option>
          <option value="0.45">45</option>
          <option value="0.50">50</option>
        </select>
      </div>
    </div>
    <div class="col-md-2 mb-1">
      <div>
        <select
          onchange="handleShowPerPage()"
          id="perPage"
          name="perPage"
          class="form-control form-control-sm shadow-sm"
        >
          <option value="10">Show 10</option>
          <option value="20">Show 20</option>
          <option value="50">Show 50</option>
          <option value="100" selected>Show 100</option>
        </select>
      </div>
    </div>
  </div>
  <div class="mt-4 row">
    <div id="tbSpinner" class="h-100 text-center">
      <img src="asset/spinner.svg" width="100" />
    </div>
    <div class="col-md-12">
      <div class="my-custom-scrollbar table-wrapper-scroll-y">
        <table id="tableSales" class="table shadow">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Date</th>
              <th scope="col">Time</th>
              <th scope="col">Code</th>
              <th scope="col">Profile</th>
              <th scope="col">Comment</th>
              <th scope="col">Amount</th>
            </tr>
          </thead>
          <tbody id="tableData"></tbody>
        </table>
      </div>
      <div class="d-flex justify-content-end mt-2">
        <div class="me-2">
          <p>
            Page:
            <span id="pageData">1</span> of
            <span id="totalPageData">-</span>
          </p>
        </div>
        <div class="me-1">
          <button
            type="button"
            onclick="prevPage()"
            class="btn btn-sm btn-secondary px-3"
          >
            Prev
          </button>
        </div>
        <div class="me-1">
          <button
            type="button"
            onclick="nextPage()"
            class="btn btn-sm btn-secondary px-3"
          >
            Next
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="./asset/js/sales.js"></script>
